{
  "name": "@lattica/backend",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "bun build src/index.ts --outdir dist --target bun",
    "dev": "bun run --hot src/index.ts",
    "db:generate": "pnpm drizzle-kit generate --config=./drizzle.config.ts",
    "db:push": "pnpm drizzle-kit push --config=./drizzle.config.ts",
    "db:migrate": "pnpm drizzle-kit migrate --config=./drizzle.config.ts",
    "db:seed": "tsx ./src/db/scripts/seed.ts",
    "db:clean": "tsx ./src/db/scripts/clean.ts"
  },
  "dependencies": {
    "@neondatabase/serverless": "catalog:",
    "dotenv": "catalog:",
    "drizzle-orm": "catalog:",
    "hono": "catalog:"
  },
  "devDependencies": {
    "@lattica/eslint": "workspace:*",
    "@lattica/tsconfig": "workspace:*",
    "@types/bun": "latest",
    "eslint": "catalog:",
    "@types/node": "catalog:",
    "drizzle-kit": "catalog:",
    "tsx": "catalog:",
    "prettier": "catalog:",
    "typescript": "catalog:"
  }
}
