{
  "extends": "solhint:all",
  "rules": {
    "func-visibility": [
      "error",
      {
        "ignoreConstructors": true
      }
    ],
    "no-console": ["error"],
    "max-line-length": "110",
    "comprehensive-interface": "off",
    "no-empty-blocks": "off",
    "contract-name-camelcase": "off",
    "not-rely-on-time": "off",
    "no-global-import": "off",
    "var-name-mixedcase": "off",
    "compiler-version": ["error", ">=0.8.0"]
  }
}
