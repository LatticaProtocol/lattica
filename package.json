{
  "name": "lattica",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "db:generate": "pnpm --filter @lattica/backend db:generate",
    "db:migrate": "pnpm --filter @lattica/backend db:migrate",
    "db:seed": "pnpm --filter @lattica/backend db:seed",
    "db:studio": "pnpm --filter @lattica/backend db:studio"
  },
  "devDependencies": {
    "@commitlint/cli": "catalog:",
    "@commitlint/config-conventional": "catalog:",
    "husky": "catalog:",
    "lint-staged": "catalog:",
    "neonctl": "catalog:",
    "rimraf": "catalog:",
    "prettier": "catalog:",
    "turbo": "catalog:"
  },
  "packageManager": "pnpm@10.18.3",
  "engines": {
    "node": ">=20.20.0"
  }
}
